<%- include("header") -%>


<div class="text-center center-div" id="login">
  <div class="conatiner w-25 border py-5">
    <div class="title pb-5">
       <h2 class="font-weight-bold">
         Login Sytem
       </h2>
       <span>Login in for the existing user</span>
       <% if(locals.logout){ %>
         <div class="alter alert-success text-center">
          <%= logout %>
         </div>
       <% } %>
       <form action="/router/login" method="POST" class="pt-3">
         <div class="form-group">
           <input type="text" name="email" placeholder="Email...." class="form-control">
           <small class="form-text text-muted text-left">
             Register Email Address
           </small>
         </div>
         <div class="form-group">
          <input type="text" name="password" placeholder="Password....." class="form-control">
        </div>
        <button type="submit" class="btn btn-success rounded-pill">Submit</button>
       </form>
      </div>
  </div>

</div>




<%- include("footer") -%>